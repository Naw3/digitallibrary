<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.MainController">
    <!-- Main navigation panel -->
    <top>
        <ToolBar>
            <Button text="Gestion Livres" fx:id="booksBtn" onAction="#openBooks" />
            <Button text="Gestion Lecteurs" fx:id="readersBtn" onAction="#openReaders" />
            <Button text="Emprunts/Retours" fx:id="loansBtn" onAction="#openLoans" />
            <Separator />
            <Button text="Statistiques" fx:id="statsBtn" onAction="#openStats" />
        </ToolBar>
    </top>
    <center>
        <StackPane fx:id="contentPane">
            <!-- Content will be loaded here -->
        </StackPane>
    </center>
</BorderPane>
